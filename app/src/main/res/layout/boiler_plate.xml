<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImagePicker"
                style="@style/buttonTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_number"
                android:layout_marginTop="8dp"
                android:text="Image Picker"
                app:backgroundTint="@color/magenta_700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStatteredImage"
                style="@style/buttonTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_number"
                android:layout_marginTop="8dp"
                android:text="Statered Images"
                app:backgroundTint="@color/magenta_700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrudOperations"
                style="@style/buttonTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_number"
                android:layout_marginTop="8dp"
                android:text="Crud Operation"
                app:backgroundTint="@color/magenta_700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_material_design"
                style="@style/buttonTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_number"
                android:layout_marginTop="8dp"
                android:text="Material Design"
                app:backgroundTint="@color/magenta_700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCardView"
                style="@style/buttonTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_number"
                android:layout_marginTop="8dp"
                android:text="Card View"
                app:backgroundTint="@color/magenta_700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottomAppBars"
                style="@style/buttonTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Bottom Appbars"
                app:backgroundTint="@color/magenta_700" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>