<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bottomSheetContainer"
    android:background="@drawable/top_radius_rectangle"
    android:layout_width="match_parent"
    android:padding="35dp"
    android:layout_height="wrap_content">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tvLockScreen"
    android:fontFamily="@font/dmsans_medium"
    android:text="Set as Lock Screen"
    android:textSize="18sp"
    android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHomeScreen"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Set as Home Screen"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBoth"
        android:fontFamily="@font/dmsans_medium"
        android:text="Set as Both"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"/>
</LinearLayout>